<?xml version="1.0" encoding="iso-8859-1" ?>
<!-- Thomas Freese -->
<project name="Maven-Deploy" default="" basedir="." xmlns:artifact="antlib:org.apache.maven.artifact.ant">

	<path id="maven-ant-tasks.classpath" path="d:/downloads/maven-ant-tasks-2.1.3.jar" />
	<typedef resource="org/apache/maven/artifact/ant/antlib.xml" uri="antlib:org.apache.maven.artifact.ant" classpathref="maven-ant-tasks.classpath" />

	<artifact:remoteRepository id="remote.repository" url="ftp://.../maven/repository-deploy-snapshots">
		<authentication username="" password="" />
	</artifact:remoteRepository>
	<artifact:install-provider artifactId="wagon-ftp" version="2.0" />

	<property name="maven.repo.local" value="d:/maven-repositories/local" />

	<!-- - - - - - - - - - - - - - - - - - 
          target: name                      
         - - - - - - - - - - - - - - - - - -->
	<target name="deploy">

		<artifact:deploy>
			<!-- file="target/my-project-1.0.jar"-->
			<!--pom refid="mypom" /-->
			<remoteRepository refid="remote.repository" />
			<dependency groupId="de.freese" artifactId="parent-pom" version="0.0.1-SNAPSHOT" />
			<dependency groupId="de.freese" artifactId="base" version="0.0.1-SNAPSHOT" />
		</artifact:deploy>
	</target>

</project>