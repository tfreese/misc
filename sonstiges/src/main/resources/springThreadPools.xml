<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"                  
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">		

	<!-- Threads leben max. 60 Sekunden, wenn es nix zu tun gibt.-->
	<!-- Min. 1 Thread, max. 20. -->	
	<bean id="parallelExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
	  <property name="corePoolSize" value="1" />
	  <property name="maxPoolSize" value="20" />
	  <property name="keepAliveSeconds" value="60" />
	  <property name="queueCapacity" value="0" />
	  <property name="threadPriority" value="1"/>
	</bean>
	
	
	<!-- Executor mit nur einem einzigen Thread.-->
	<!-- Max. 20 Tasks können in der Queue sein. -->	
	<bean id="serialExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
	  <property name="corePoolSize" value="1" />
	  <property name="maxPoolSize" value="1" />
	  <property name="keepAliveSeconds" value="0" />
	  <property name="queueCapacity" value="20" />
	  <property name="threadPriority" value="1"/>
	</bean>
	
	<!-- ScheduledExecutor für max. 20 Tasks -->
	<bean id="scheduledExecutor" class="org.springframework.scheduling.concurrent.ScheduledExecutorFactoryBean">
	  <property name="poolSize" value="20" />
	  <property name="threadPriority" value="1"/>
	</bean>	
		
</beans>